@model Langtang.DataAccessLayer.ViewModel.ViewList
   
@{

    int Sno = 1;
}

@if (Model.PersonnalList.Count != 0)
{
    @(Html.Kendo().Grid(Model.PersonnalList).
        Name("PersonnalView")
        .Columns(c =>
        {
            c.Bound(model => model.FIRSTNAME);
            c.Bound(model => model.MIDDLENAME);
            c.Bound(model => model.LASTNAME);
            c.Bound(model => model.DATEOFBIRTH);
            c.Bound(model => model.PLACEOFBIRTH);
            c.Bound(model => model.DODID);
        })
           .HtmlAttributes(new { style = "height: 550px;" })
        .Scrollable()
        .Groupable()
        .Sortable()
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5))
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("Index", "Personnal"))
            .PageSize(20)
        )
    )

}





 